@model TablesReady.Data.Domain.Restaurant
@{
    ViewData["Title"] = "Create";
}

<h3>Create</h3>
<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="RestaurantName" class="control-label"></label>
                <input asp-for="RestaurantName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RestaurantBusinessNum" class="control-label"></label>
                <input asp-for="RestaurantBusinessNum" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RestaurantSignUpDate" class="control-label"></label>
                <input asp-for="RestaurantSignUpDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Restaurant" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<a asp-action="Index">Return To Restaurant View</a>